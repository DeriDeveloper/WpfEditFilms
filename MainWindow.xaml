<Window x:Class="WpfEditFilms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEditFilms"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Главное меню" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить фильм" Padding="10" Click="AddFilmButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
