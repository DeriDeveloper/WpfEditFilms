<Window x:Class="WpfEditFilms.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEditFilms"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Авторизация" MinWidth="300" Height="200" MinHeight="200" Width="300">
    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTextBox" TextChanged="LoginTextBox_TextChanged" Style="{StaticResource TextBoxInput}" Text="admin"/>
        
            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Style="{StaticResource PasswordBoxInput}" Password="admin"/>

            <Button x:Name="EnterButton" Content="Войти" Click="EnterButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
